function showAnswer(){document.getElementById("artAnswer").style.display="block";document.getElementById("btnShowAnswer").style.display="none";document.getElementById("btnHideAnswer").style.display="inline";getAnswer()}function hideAnswer(){document.getElementById("artAnswer").style.display="none";document.getElementById("btnHideAnswer").style.display="none";document.getElementById("btnShowAnswer").style.display="inline";clearMarkings();clearMC()}function allowDrop(n){n.preventDefault()}function drag(n){n.dataTransfer.setData("text",n.target.id)}function drop(n){if(n.target.childNodes.length==0){n.preventDefault();var t=n.dataTransfer.getData("text"),i=document.getElementById(t);n.target.appendChild(document.getElementById(t));document.getElementById("btnShowAnswer").style.display=="none"&&ValidateOneDnD(n.target)}}function returnDrop(n){n.preventDefault();var t=n.dataTransfer.getData("text");n.target.appendChild(document.getElementById(t));document.getElementById("btnShowAnswer").style.display=="none"&&(document.getElementById(t).style.background="",document.getElementById(t).removeChild(document.getElementById(t).lastChild))}function reDrop(){event.preventDefault();var n=event.dataTransfer.getData("text");event.target.appendChild(document.getElementById(n))}function hideCaseStudy(){document.getElementById("CaseStudy").style.display="none";document.getElementById("btnHideCaseStudy").style.display="none";document.getElementById("btnShowCaseStudy").style.display="block"}function showCaseStudy(){document.getElementById("CaseStudy").style.display="block";document.getElementById("btnShowCaseStudy").style.display="none";document.getElementById("btnHideCaseStudy").style.display="block"}function getAnswer(){if(document.getElementById("QuestionType")){var n=document.getElementById("QuestionType").className;switch(n){case"DnD":ValidateDragAndDrop();break;case"MC":ValidateMC();$("input[name=rb]:radio").change(function(){document.getElementById("btnShowAnswer").style.display=="none"&&(clearMC(),ValidateMC())});break;case"MS":ValidateMS();$("input[name=rb]:checkbox").change(function(){document.getElementById("btnShowAnswer").style.display=="none"&&ValidateOneMS(this)});break;case"SLT":ValidateSLT();$("#UserQuestion select").change(function(){document.getElementById("btnShowAnswer").style.display=="none"&&ValidateOneSLT(this)})}}}function clearMarkings(){$("#UserQuestion ul.droppable >li>i:last-child").remove();$("#UserQuestion ul.droppable >li").css("background","")}function ValidateOneDnD(n){var r=$("#RightAnswer ul.droppable"),i,t;for(n.childNodes[0].style.background&&n.childNodes[0].removeChild(n.childNodes[0].lastChild),i=0;i<r.length;i++)n.id==r[i].id&&(n.innerText==r[i].innerText?(n.childNodes[0].style.background="#00FF00",t=document.createElement("i"),t.className="fa fa-check",n.childNodes[0].appendChild(t)):(n.childNodes[0].style.background="#FF0000",t=document.createElement("i"),t.className="fa fa-times",n.childNodes[0].appendChild(t)))}function ValidateDragAndDrop(){for(var t=$("#UserQuestion ul.droppable"),u=$("#RightAnswer ul.droppable"),r,i,n=0;n<t.length;n++)if(t[n].childNodes.length)for(r=0;r<u.length;r++)t[n].id==u[r].id&&(t[n].innerText==u[r].innerText?(t[n].childNodes[0].style.background="#00FF00",i=document.createElement("i"),i.className="fa fa-check",t[n].childNodes[0].appendChild(i)):(t[n].childNodes[0].style.background="#FF0000",i=document.createElement("i"),i.className="fa fa-times",t[n].childNodes[0].appendChild(i)))}function clearMC(){$("input[name=rb]").parent().css("color","");$("#UserQuestion i.fa-times").remove();$("#UserQuestion i.fa-check").remove();$("#UserQuestion select").parent().css("color","")}function ValidateMC(){var n;$("input[name=rb]:checked").length&&($("input[name=rb]:checked").val()==document.getElementById("RightAnswer").innerText?($("input[name=rb]:checked").parent().css("color","green"),n=document.createElement("i"),n.className="fa fa-check",$("input[name=rb]:checked").parent().append(n)):($("input[name=rb]:checked").parent().css("color","red"),n=document.createElement("i"),n.className="fa fa-times",$("input[name=rb]:checked").parent().append(n)))}function ValidateOneMS(n){var t;n.parentNode.removeChild(n.parentNode.lastChild);n.checked&&document.getElementById("RightAnswer").innerText.indexOf(n.value)>=0||!n.checked&&document.getElementById("RightAnswer").innerText.indexOf(n.value)<0?(n.parentNode.style.color="green",t=document.createElement("i"),t.className="fa fa-check",n.parentNode.appendChild(t)):(n.parentNode.style.color="red",t=document.createElement("i"),t.className="fa fa-times",n.parentNode.appendChild(t))}function ValidateOneSLT(n){for(var r=$("#UserQuestion select"),u=$("#RightAnswer select"),t,i=0;i<r.length;i++)if(r[i]==n){n.parentNode.removeChild(n.parentNode.lastChild);n.selectedIndex==u[i].selectedIndex?(n.parentNode.style.color="green",t=document.createElement("i"),t.className="fa fa-check",n.parentNode.appendChild(t)):(n.parentNode.style.color="red",t=document.createElement("i"),t.className="fa fa-times",n.parentNode.appendChild(t));break}}function ValidateMS(){var t,n,i;if($("input[name=rb]").length)for(t=$("input[name=rb]"),n=0;n<t.length;n++)(t[n].checked||document.getElementById("RightAnswer").innerText.indexOf(t[n].value)>=0)&&(t[n].checked&&document.getElementById("RightAnswer").innerText.indexOf(t[n].value)>=0||!t[n].checked&&document.getElementById("RightAnswer").innerText.indexOf(t[n].value)<0?(t[n].parentNode.style.color="green",i=document.createElement("i"),i.className="fa fa-check",t[n].parentNode.appendChild(i)):(t[n].parentNode.style.color="red",i=document.createElement("i"),i.className="fa fa-times",t[n].parentNode.appendChild(i)))}function ValidateSLT(){for(var i=$("#UserQuestion select"),r=$("#RightAnswer select"),t,n=0;n<i.length;n++)i[n].selectedIndex==r[n].selectedIndex?(i[n].parentNode.style.color="green",t=document.createElement("i"),t.className="fa fa-check",i[n].parentNode.appendChild(t)):(i[n].parentNode.style.color="red",t=document.createElement("i"),t.className="fa fa-times",i[n].parentNode.appendChild(t))}$(function(){$("div.draggablePar >section:first-child").on("dragover",function(){event.preventDefault()});$("div.draggablePar >section:first-child").on("drop",function(){returnDrop(event)});$("ul.draggable > li").prop("draggable","true");$("ul.draggable >li").on("dragstart",function(){event.dataTransfer.setData("text",event.target.id)});$(".droppable").on("dragover",function(){event.preventDefault()});$(".droppable").on("drop",function(){drop(event)})})